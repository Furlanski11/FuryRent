@model List<AllCarsQueryModel>

@{
	ViewData["Title"] = "Cars By Make ";
}

@if (Model.Count == 0)
{
	<div class="alert alert-danger" role="alert">
		No results!
	</div>
}
<div class="card-deck">
	@foreach (var car in Model)
	{
		<div class="card border-2 border-danger mb-2">
			<img src="@car.ImageUrl" class="card-img-top" alt="@car.Make @car.Model">
			<div class="card-body">
				<h5 class="card-title">@car.Make @car.Model</h5>
				<p class="card-model">@car.PricePerDay$ /day</p>
				<a asp-area="" asp-controller="Car" asp-action="All" class="btn btn-danger">Details</a>
				<a asp-area="" asp-controller="Car" asp-action="All" class="btn btn-danger">Rent</a>
			</div>
		</div>
	}
</div>

<div >
	<a asp-area="" asp-controller="Car" asp-action="All" class="btn btn-danger">Back</a>
</div>