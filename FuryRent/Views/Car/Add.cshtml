@model AddCarViewModel

@{
    ViewBag.Title = "Add Car";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form asp-action="Add" method="post">
            <div class="mb-3">
                <label asp-for="@Model.Make" class="form-label-add-edit">Make</label>
                <input asp-for="@Model.Make" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Make" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Model" class="form-label-add-edit">Model</label>
                <input asp-for="@Model.Model" class="form-control" aria-required="true" />
                <span asp-validation-for="@Model.Model" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.ImageUrl" class="form-label-add-edit">Image URL</label>
                <textarea asp-for="@Model.ImageUrl" class="form-control" aria-required="true" rows="5"></textarea>
                <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.YearOfProduction" class="form-label-add-edit">Year of production</label>
                <input asp-for="@Model.YearOfProduction" class="form-control" aria-required="true" placeholder="dd/MM/yyyy")" />
                <span asp-validation-for="@Model.YearOfProduction" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Color" class="form-label-add-edit">Color</label>
                <input asp-for="@Model.Color" class="form-control"/>
                <span asp-validation-for="@Model.Color" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.CategoryId" class="form-label-add-edit">Select Category</label>
                <select asp-for="@Model.CategoryId" class="form-control" aria-required="true">
                    <option disabled selected value="">Select Category...</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.EngineTypeId" class="form-label-add-edit">Select Engine type</label>
                <select asp-for="@Model.EngineTypeId" class="form-control" aria-required="true">
                    <option disabled selected value="">Select Engine type...</option>
                    @foreach (var engineType in Model.EngineTypes)
                    {
                        <option value="@engineType.Id">@engineType.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.EngineTypeId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.Horsepower" class="form-label-add-edit">Horsepower</label>
                <input asp-for="@Model.Horsepower" class="form-control" />
                <span asp-validation-for="@Model.Horsepower" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.GearboxTypeId" class="form-label-add-edit">Select Gearbox type</label>
                <select asp-for="@Model.GearboxTypeId" class="form-control" aria-required="true">
                    <option disabled selected value="">Select Gearbox type...</option>
                    @foreach (var gearboxType in Model.GearboxTypes)
                    {
                        <option value="@gearboxType.Id">@gearboxType.Name</option>
                    }
                </select>
                <span asp-validation-for="@Model.EngineTypeId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.PricePerDay" class="form-label-add-edit">Price per day</label>
                <input asp-for="@Model.PricePerDay" class="form-control" />
                <span asp-validation-for="@Model.PricePerDay" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.IsVipOnly" class="form-label-add-edit">Is Vip Only</label>
                <input asp-for="@Model.IsVipOnly" class="form-control" />
                <span asp-validation-for="@Model.IsVipOnly" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <input class="btn btn-outline-success mb-2 w-100 p-3 fw-bold" type="submit" value="Add" />
                <a asp-controller="Car" asp-action="All" class="btn btn-outline-danger mb-2 w-100 p-3 fw-bold">Back to All Cars</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

