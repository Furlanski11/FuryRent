@model DeleteCarViewModel
@{
    ViewBag.Title = "Delete Car";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title text-center">@Model.Make @Model.Model</h3>
                <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Make @Model.Model">
                <p class="text-danger mt-3 fs-5">Are you sure you want to delete this car?</p>
            </div>
            <div class="card-footer">
                <form asp-action="DeleteConfirmed" method="post">
                    <input type="hidden" asp-for="Id" />
                    <button type="submit" class="btn btn-danger">Confirm Delete</button>
                    <a asp-action="All" class="btn btn-secondary">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>