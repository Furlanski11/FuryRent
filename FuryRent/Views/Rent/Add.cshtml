@model AddRentViewModel

@{
	ViewBag.Title = "Rent";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="row">
	<div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
		<form asp-action="Add" method="post">
			<div class="mb-3">
				<label asp-for="@Model.RentalStartDate" class="form-label-add-edit">Start date</label>
				<input asp-for="@Model.RentalStartDate" class="form-control" aria-required="true" />
				<span asp-validation-for="@Model.RentalStartDate" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<label asp-for="@Model.RentalEndDate" class="form-label-add-edit">End date</label>
				<input asp-for="@Model.RentalEndDate" class="form-control" aria-required="true" />
				<span asp-validation-for="@Model.RentalEndDate" class="text-danger"></span>
			</div>
			<div class="mb-3">
				<input class="btn btn-outline-success mb-2 w-100 p-3 fw-bold" type="submit" value="Rent" />
			</div>
		</form>
	</div>
</div>


@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}


